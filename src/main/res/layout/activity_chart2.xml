<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4061F30">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="415dp"
        android:layout_height="730dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView55"
            android:layout_width="match_parent"
            android:layout_height="78dp" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="           WYKRES POMIARÓW PO POSIŁKU"
            android:textColor="#B10B43"
            android:textSize="18dp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="502dp">

            <TextView
                android:id="@+id/textView_y"
                android:layout_width="381dp"
                android:layout_height="372dp"
                android:rotation="270"
                android:text="Wartości pomiarów [mg/dl]"
                android:textColor="#90F3F3F3"
                android:textSize="14dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartt"
                android:layout_width="409dp"
                android:layout_height="527dp"
                android:verticalScrollbarPosition="right" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                                 Nr elementu z listy pomiarów"
            android:textColor="#90F3F3F3"
            android:textSize="14dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>