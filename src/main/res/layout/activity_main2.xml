<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4061F30">


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="403dp"
        android:layout_height="606dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/textViewStatystyki"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="                                           STATYSTKI"
            android:textColor="#FADF0C53"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="55dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:text="" />

            <Button
                android:id="@+id/buttonChart1"
                android:layout_width="145dp"
                android:layout_height="80dp"
                android:text="Wykres Pomiarów Przed Posiłkiem" />

            <Button
                android:id="@+id/buttonChart2"
                android:layout_width="145dp"
                android:layout_height="80dp"
                android:text="Wykres Pomiarów Po posiłku" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="55dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="                                                   WYNIKI"
            android:textColor="#EAE7E7"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPonNormy"
                android:layout_width="159dp"
                android:layout_height="39dp"
                android:text="   ponizej normy      "
                android:textColor="#FF9100" />

            <TextView
                android:id="@+id/textViewWNormie"
                android:layout_width="139dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="   w normie"
                android:textColor="#76FF03" />

            <TextView
                android:id="@+id/textViewZPowNormy"
                android:layout_width="106dp"
                android:layout_height="39dp"
                android:text="powyzej normy"
                android:textColor="#FF1744" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3OstPom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="   Ostatni pomiar:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewOstatniPomiar"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="Ostatni pomiar:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewPomiarAVG"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Sredni wynik:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewSrWaga"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Srednia waga:"
            android:textColor="#F3ECEC"
            android:textSize="16sp"
            android:textStyle="normal|italic" />

        <Button
            android:id="@+id/buttonBazaPomiarow"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="Zobacz wszystkie pomiary" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>